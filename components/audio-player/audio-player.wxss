.audio-player {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  background-color: #f8f8f8;
  padding: 10px;
  box-sizing: border-box;
}

.controls {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  padding: 5px 0;
}

button {
  background-color: #1aad19;
  color: #ffffff;
  border: none;
  border-radius: 4px;
  padding: 5px 10px;
  margin: 5px;
}

.progress-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 10px;
}

.progress-text {
  font-size: 14px;
  margin-bottom: 5px;
}

.progress-slider {
  width: 100%;
}
.display-path {
  font-size: 12px;
  color: #333;
  margin-top: 10px;
  text-align: center;
}
