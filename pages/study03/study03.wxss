/* 在wxss文件中定义地图容器的样式 */
.map-container {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
}

/* 在wxss文件中定义地图的样式 */
.map {
  width: 100%;
  height: 100%;
}
.location-btn {
  position: absolute;
  bottom: 20px;
  left: 20px;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 10px 15px;
  font-size: 14px;
  color: #333;
}
