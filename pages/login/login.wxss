.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 0 20px;
  box-sizing: border-box;
}

.logo-container {
  margin-bottom: 30px;
}

.logo {
  width: 120px;
  height: 120px;
}

.input-container {
  width: 100%;
  margin-bottom: 30px;
}

.username-input,
.password-input {
  width: 100%;
  height: 40px;
  line-height: 40px;
  padding: 0 10px;
  border: 1px solid #cccccc;
  border-radius: 4px;
  margin-bottom: 10px;
}

.login-button,
.register-button {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  color: #ffffff;
  border-radius: 4px;
  margin-bottom: 10px;
}

.login-button {
  background-color: #1aad19;
}

.register-button {
  background-color: #1890ff;
}
